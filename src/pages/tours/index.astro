---
// src/pages/tours/index.astro
import Base from "../../layouts/Base.astro";
import ToursIndex from "../../components/ToursIndex.astro";

/* Local types to keep this file happy */
type TourKind = "standard" | "custom" | "package";
type CardInput = {
  title: string;
  teaser?: string;
  duration?: string;
  priceNumber?: number;
  scheduleText?: string;
  thumbnailSrc?: string;
  thumbnailAlt?: string;
  href?: string;
  bookingUrl?: string;
  formUrl?: string;
  kind?: TourKind;
  ctaLabel?: string;
  ctaAriaLabel?: string;
};

const tiles = [
  {
    title: "Highlights Tour",
    teaser: "See Mid-Missouri's must-see spots with local narration.",
    duration: "105 minutes",
    scheduleText: "Daily 11:30am & 1:30pm",
    priceNumber: 39,
    thumbnailSrc: "/images/highlights.jpg",
    thumbnailAlt: "Highlights Tour promotional image",
    href: "/tours/highlightstour",
    bookingUrl: "/tours/highlightstour",
    kind: "standard" as const,
    ctaLabel: "View Details",
    ctaAriaLabel: "View Details: Highlights Tour",
  },
  {
    title: "Custom Tours",
    teaser: "Build your own routeâ€”history, art, faith, food, and more.",
    duration: "You choose",
    thumbnailSrc: "/images/packages.jpg",
    thumbnailAlt: "Custom Tours promotional image",
    href: "/tours/custom",
    formUrl: "/tours/custom",
    kind: "custom" as const,
    ctaLabel: "Request Info",
    ctaAriaLabel: "Request Info: Custom Tours",
  },
  {
    title: "Packages",
    teaser: "Bundle tours with local experiences for groups & events.",
    duration: "Half-day / Full-day",
    thumbnailSrc: "/images/david.jpg",
    thumbnailAlt: "Packages promotional image",
    href: "/packages",
    formUrl: "/packages/",
    kind: "package" as const,
    ctaLabel: "See Packages",
    ctaAriaLabel: "See Packages: Packages",
  },
] satisfies CardInput[];
---

<Base
  title="Tours | Mid MO Tours"
  description="Explore our Standard City Highlights tour, design a Custom Tour, or choose from curated Packages.">
  <ToursIndex
    title="Choose Your Tour"
    intro="Start with our Standard City Highlights tour, tailor something unique, or pick a curated package."
    items={tiles}
  />
</Base>
