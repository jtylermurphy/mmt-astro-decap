---
// src/pages/tours/highlightstour.astro
import Base from "@/layouts/Base.astro";
import Icon from "@/components/Icon.astro";
import { icons } from "@/lib/icons";
import { getEntry } from "astro:content";

const entry = await getEntry("tours", "jefferson-city-highlights");
if (!entry) {
  throw new Error("Highlights Tour entry is missing. Ensure the tour exists in src/content/tours.");
}
const tour = entry.data;

const heroCopy = `
<p>Hop aboard for a fun, story-filled ride through Missouri's historic capital!</p>
<p>This guided tour showcases the best of Jefferson City — from the majestic Capitol dome and riverside views to charming neighborhoods, cultural landmarks, and local favorites you won't find in the guidebooks.</p>
<p>Along the way, you'll enjoy engaging narration from a local guide who knows the city inside and out. Expect fascinating stories, surprising trivia, and a new appreciation for the people and places that make Jefferson City special.</p>
`;

const quickFacts = [
  { label: "Duration", icon: icons.clock, value: tour.duration ?? "105 minutes" },
  { label: "Departures", icon: icons.calendar, value: "Daily 11:30am & 1:30pm" },
  { label: "Price", icon: icons.envelope, value: `$${tour.price ?? 39} per guest` },
];

const itinerary = [
  {
    title: "Missouri State Capitol",
    description: "See the iconic dome, grand murals, and sweeping river views that define the skyline.",
  },
  {
    title: "Historic Downtown",
    description: "Cruise past lively storefronts, the Governor’s Mansion exterior, and bustling local favorites.",
  },
  {
    title: "Riverfront & Bridge Views",
    description: "Capture the perfect photo overlooking the Missouri River and the majestic bridges that span it.",
  },
];

const highlights = [
  "Air-conditioned 14 passenger van",
  "Live narration & local stories",
  "Photo stops at key landmarks",
];

const goodToKnow = [
  "Arrive 10 minutes early for easy boarding.",
  "Family-friendly, with minimal walking required.",
  "Accessible vehicle—let us know about mobility needs when booking.",
  "Private group upgrades and custom departures available on request.",
  "Contact us for group rates on parties of 3 or more.",
];

const bookingUrl = tour.booking_url ?? "https://bookeo.com/midmotours?type=41567T3LWN41998B34C336";
const heroImage = tour.image ?? "/uploads/tour-standard-hero.png";
---

<Base
  title={`${tour.title} | Mid Mo Tours`}
  description={tour.short_description ?? "Guided highlights of Jefferson City."}>
  <section class="relative isolate overflow-hidden rounded-3xl bg-white shadow-lg">
    <div class="grid gap-8 lg:grid-cols-2">
      <div class="space-y-6 p-8 sm:p-10 order-2 lg:order-1">
        <p class="inline-flex items-center gap-2 text-sm font-semibold uppercase tracking-wide text-primary">
          <Icon html={icons.calendar} /> Our Signature Tour
        </p>
        <h1 class="text-4xl font-serif font-black italic text-slate-900 sm:text-5xl">
          {tour.title ?? "Highlights Tour"}
        </h1>
        <div class="prose prose-invert max-w-none text-slate-700" set:html={heroCopy} />
        <div class="flex flex-wrap items-center gap-3 text-sm text-slate-600">
          <span class="inline-flex items-center gap-2 rounded-full bg-primary/10 px-3 py-1 font-medium text-primary">
            <Icon html={icons.clock} />
            {tour.duration ?? "105 minutes"}
          </span>
          <span class="inline-flex items-center gap-2 rounded-full bg-primary/10 px-3 py-1 font-medium text-primary">
            <Icon html={icons.calendar} /> Daily departures
          </span>
          <span class="inline-flex items-center gap-2 rounded-full bg-primary/10 px-3 py-1 font-medium text-primary">
            ${tour.price ?? 39} per guest
          </span>
        </div>
        <div class="flex flex-col gap-3 sm:flex-row">
          <a href={bookingUrl} class="btn btn-primary">Book the Highlights Tour</a>
          <a href="/contact" class="btn btn-outline">Ask a Question</a>
        </div>
      </div>
      <div class="relative order-1">
        <img
          src={heroImage}
          alt={tour.title ?? "Highlights Tour"}
          class="h-full w-full rounded-b-3xl object-cover lg:rounded-r-3xl lg:rounded-bl-none"
          loading="lazy"
          decoding="async"
        />
      </div>
    </div>
  </section>

  <section class="mt-16">
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      {
        quickFacts.map((fact) => (
          <article class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
            <div class="mb-3 flex items-center gap-3 text-primary">
              <span class="inline-flex h-10 w-10 items-center justify-center rounded-full bg-primary/10">
                <span class="icon" set:html={fact.icon} />
              </span>
              <h2 class="text-base font-semibold uppercase tracking-wide text-slate-800">{fact.label}</h2>
            </div>
            <p class="text-lg font-serif text-slate-900">{fact.value}</p>
          </article>
        ))
      }
    </div>
  </section>

  <section class="mt-16">
    <div class="grid gap-8 lg:grid-cols-[1.1fr_0.9fr]">
      <div class="rounded-2xl border border-slate-200 bg-white p-8 shadow-sm">
        <h2 class="text-3xl font-serif font-semibold text-slate-900">Itinerary Highlights</h2>
        <p class="mt-3 text-slate-600">
          We cover the must-see stops—with time for photos, stories, and questions at each location. Here are just some
          of the highlights:
        </p>
        <div class="mt-6 space-y-6">
          {
            itinerary.map((stop) => (
              <article class="">
                <h3 class="text-xl font-semibold text-slate-900">{stop.title}</h3>
                <p class="mt-2 text-slate-600">{stop.description}</p>
              </article>
            ))
          }
        </div>
      </div>
      <aside class="space-y-6">
        <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
          <h2 class="text-2xl font-serif font-semibold text-slate-900">What’s Included</h2>
          <ul class="mt-4 space-y-2 text-slate-600">
            {
              highlights.map((item) => (
                <li class="flex items-start gap-3">
                  <span class="mt-1 inline-flex h-5 w-5 items-center justify-center rounded-full bg-primary/10 text-primary">
                    ✓
                  </span>
                  <span>{item}</span>
                </li>
              ))
            }
          </ul>
        </div>
        <div class="rounded-2xl border border-slate-200 bg-slate-900 p-6 text-slate-100 shadow-sm">
          <h2 class="text-2xl font-serif font-semibold">Good to Know</h2>
          <ul class="mt-4 space-y-3 text-sm">
            {
              goodToKnow.map((item) => (
                <li class="flex gap-2">
                  <span class="mt-0.5 text-primary">•</span>
                  <span>{item}</span>
                </li>
              ))
            }
          </ul>
        </div>
      </aside>
    </div>
  </section>

  <section class="mt-16 rounded-3xl border border-slate-200 bg-white p-8 shadow-sm">
    <div class="grid gap-6 md:grid-cols-2 md:items-center">
      <div>
        <p class="text-sm font-semibold uppercase tracking-wide text-primary">Ready to ride?</p>
        <h2 class="mt-2 text-3xl font-serif font-semibold text-slate-900">Reserve your seat on the Highlights Tour</h2>
        <p class="mt-3 text-slate-600">
          Tours often sell out during peak weekends. Book now to secure your preferred departure time, or reach out to
          customize the experience for your group.
        </p>
      </div>
      <div class="flex flex-col gap-3 sm:flex-row sm:justify-end">
        <a href={bookingUrl} class="btn btn-primary">Book Now</a>
        <a href="tel:5738269236" class="btn btn-outline">Call 573-826-9236</a>
      </div>
    </div>
  </section>
</Base>
