---
// src/pages/404.astro
import Base from "../layouts/Base.astro";
const gold = "#ca902b"; // brand accent
---

<Base title="We missed a turn | Mid MO Tours" description="This route looks closed. Let's get you back on tour.">
  <section class="">
    <div class="mx-auto max-w-3xl px-4 py-20 text-center">
      <!-- Fun badge -->
      <div class="inline-flex items-center gap-2 rounded-full border px-3 py-1 text-xs font-semibold text-slate-700">
        <span style={`color:${gold}`}>🧭</span> Off the route (404)
      </div>

      <h1 class="mt-4 text-3xl font-semibold tracking-tight">We missed a turn</h1>
      <p class="mt-3 text-slate-600">This page isn’t on our map. Let’s recalculate and get you to the good stuff.</p>

      <!-- Decorative “tour map” -->
      <div class="mx-auto mt-8 w-full max-w-xl">
        <svg viewBox="0 0 600 220" class="w-full" aria-hidden="true">
          <!-- road -->
          <path
            d="M20,180 C140,140 160,60 300,90 C420,115 460,60 580,80"
            fill="none"
            stroke="#e5e7eb"
            stroke-width="10"
            stroke-linecap="round"></path>
          <!-- dashed route -->
          <path
            d="M20,180 C140,140 160,60 300,90 C420,115 460,60 580,80"
            fill="none"
            stroke={gold}
            stroke-width="4"
            stroke-linecap="round"
            stroke-dasharray="8 8"></path>
          <!-- start pin -->
          <circle cx="20" cy="180" r="7" fill={gold}></circle>
          <!-- end pin -->
          <g transform="translate(580,80)">
            <circle r="9" fill={gold}></circle>
            <circle r="4" fill="white"></circle>
          </g>
          <!-- you-are-here bus -->
          <g transform="translate(300,90)">
            <rect x="-16" y="-10" width="32" height="20" rx="4" fill="#002a3a"></rect>
            <circle cx="-10" cy="12" r="4" fill="#111827"></circle>
            <circle cx="10" cy="12" r="4" fill="#111827"></circle>
          </g>
        </svg>
      </div>

      <!-- Helpful links -->
      <div class="mt-10 grid gap-3 sm:grid-cols-2">
        <a
          href="/tours/highlightstour"
          class="btn btn-primary inline-flex items-center justify-center px-5 py-3 text-sm font-semibold text-white hover:bg-emerald-700">
          Highlights Tour
        </a>

        <a
          href="/"
          class="btn btn-outline inline-flex items-center justify-center border px-5 py-3 text-sm font-semibold">
          Back to home
        </a>
      </div>
    </div>
  </section>

  <!-- Keyframes for the arbitrary animation utility above -->
  <style>
    @keyframes fade-in {
      from {
        opacity: 0;
      }
      to {
        opacity: 1;
      }
    }
  </style>
</Base>
