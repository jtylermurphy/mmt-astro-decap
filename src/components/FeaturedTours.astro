---
// src/components/FeaturedTours.astro
import TourCard from "./TourCard.astro";

type TourKind = "standard" | "custom" | "package" | string;
type CardInput = {
  title: string;
  teaser?: string;
  duration?: string;
  priceNumber?: number;
  scheduleText?: string;
  thumbnailSrc?: string;
  thumbnailAlt?: string;
  href?: string;
  bookingUrl?: string;
  formUrl?: string;
  kind?: TourKind;
  ctaLabel?: string;
  ctaAriaLabel?: string;
};

interface Props {
  title?: string;
  items: CardInput[];
}

const { title = "Our Tours", items = [] } = Astro.props as Props;
---

<section class="">
  <div class="mx-auto max-w-7xl px-4 py-12">
    <div class="mb-6 flex items-end justify-between gap-4 justify-self-center">
      <h2 class="text-5xl font-black italic">{title}</h2>
    </div>

    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {items.map((t) => <TourCard {...t} />)}
    </div>
  </div>
</section>
