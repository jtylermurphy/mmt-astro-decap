---
/* src/components/Hero.astro */

type CTA = { label: string; href: string };

interface Props {
  heading: string;
  subheading?: string;
  imageSrc?: string;
  imageAlt?: string;
  primaryCta?: CTA;
  secondaryCta?: CTA;
}

const { heading, subheading, imageSrc, imageAlt = heading, primaryCta, secondaryCta } = Astro.props as Props;
---

<section class="bg-white">
  <div class="mx-auto max-w-7xl px-4 py-12 md:py-16 grid items-center gap-8 md:grid-cols-2">
    <!-- Copy -->
    <div class="space-y-5">
      <h1 class="text-4xl/tight font-semibold tracking-tight sm:text-5xl">
        {heading}
      </h1>
      {subheading && <p class="text-lg text-slate-600">{subheading}</p>}
      {
        (primaryCta || secondaryCta) && (
          <div class="flex flex-wrap gap-3 pt-2">
            {primaryCta && (
              <a
                href={primaryCta.href}
                class="inline-flex items-center justify-center rounded-xl bg-emerald-600 px-5 py-3 text-sm font-semibold text-white shadow-sm hover:bg-emerald-700">
                {primaryCta.label}
              </a>
            )}
            {secondaryCta && (
              <a
                href={secondaryCta.href}
                class="inline-flex items-center justify-center rounded-xl border border-slate-300 px-5 py-3 text-sm font-semibold text-slate-800 hover:bg-slate-50">
                {secondaryCta.label}
              </a>
            )}
          </div>
        )
      }
    </div>

    <!-- Image (optional) -->
    {
      imageSrc && (
        <div class="md:order-last">
          <img
            src={imageSrc}
            alt={imageAlt}
            class="w-full rounded-2xl shadow-sm object-cover"
            loading="eager"
            decoding="async"
          />
        </div>
      )
    }
  </div>
</section>
