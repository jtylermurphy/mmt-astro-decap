---
// src/components/PackagesIndex.astro
import PackageCard from "./PackageCard.astro";

type CardInput = {
  title: string;
  includes?: string[];
  duration?: string;
  priceText?: string;
  thumbnailSrc?: string;
  href?: string;
  bookingUrl?: string;
  formUrl?: string;
  ctaLabel?: string;
};

interface Props {
  title?: string;
  intro?: string;
  items: CardInput[];
}

const { title = "Packages", intro, items = [] } = Astro.props as Props;
---

<section class="">
  <div class="mx-auto max-w-7xl px-4 py-12">
    <header class="mb-8">
      <h1 class="text-3xl font-semibold tracking-tight">{title}</h1>
      {intro && <p class="mt-3 text-slate-600">{intro}</p>}
    </header>

    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {items.map((p) => <PackageCard {...p} />)}
    </div>
  </div>
</section>
