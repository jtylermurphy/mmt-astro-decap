---
import "../styles/global.css";
import HeaderNav from "../components/HeaderNav.astro";
import Footer from "../components/Footer.astro";

const {
  title = "Mid MO Tours",
  description = "Guided tours and shuttles in Jefferson City",
  pageClass = "",
} = Astro.props;
---

<html lang="en" class="h-full">
  <!-- make the root 100% height -->
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body class={`min-h-screen flex flex-col bg-white text-slate-800 ${pageClass}`}>
    <!-- dvh = reliable on mobile -->
    <HeaderNav />
    <main id="main" class="grow w-full mx-auto max-w-7xl px-4 py-12">
      <!-- grow pushes footer down -->
      <slot />
    </main>
    <Footer />
  </body>
</html>
